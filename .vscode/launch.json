{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "pathMappings": {
                "/var/www/html": "${workspaceFolder}"
            },
            "log": true,
            "externalConsole": false,
            "xdebugSettings": {
                "max_data": -1,
                "show_hidden": 1,
                "max_children": -1,
                "max_depth": -1
            }
        }
    ]
}
